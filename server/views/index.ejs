<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Blends</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    /* Custom styles can go here */
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-5"><center>Admin</center></h1>
    <ul class="list-group mt-3">
      <% blends.forEach(blend => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <span><%= blend.title %></span> - <span><%= blend.description %></span>
          </div>
          <div>
            <form action="/blends/<%= blend._id %>?_method=DELETE" method="post">
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/blends/<%= blend._id %>/edit" class="btn btn-primary ml-2">Edit</a>
          </div>
        </li>
      <% }); %>
    </ul>
    <a href="/blends/new" class="btn btn-success mt-3">Add New Blend</a>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
